{
  "app": {
    "title": "GSC - HR Information System",
    "description": "Guimaras State College - Human Resource Information System",
    "port": "9094",
    "url": "http://localhost:9094",
    "dir": "${APP_DIR}",
    "dirs": {
      "data": "${APP_DIR}/data",
      "src": "${APP_DIR}/src",
      "public": "${APP_DIR}/data/public",
      "view": "${APP_DIR}/data/view",
      "upload": "${APP_DIR}/data/upload"
    }
  },
  "express": {
    "trustProxy": false
  },
  "nunjucks": {
    "loader": {
      "watch": true,
      "noCache": true
    },
    "environment": {
      "autoescape": true,
      "throwOnUndefined": false,
      "trimBlocks": false,
      "lstripBlocks": false
    }
  },
  "session": {
    "name": "gsc_hr_is_app_sid",
    "store": {
      "db": "sessions.db",
      "dir": "${APP_DIR}/data"
    },
    "cookie": {
      "httpOnly": false,
      "maxAge": 31536000000,
      "secure": false
    }
  },
  "mongodb": {
    "connections": {
      "admin": {
        "host": "127.0.0.1:27017",
        "db": "admin"
      },
      "main": {
        "host": "127.0.0.1:27017",
        "db": "hrmo",
        "options": {
          "useCreateIndex": true,
          "useNewUrlParser": true,
          "useUnifiedTopology": true
        }
      }
    }
  },
  "aws": {
    "region": "ap-southeast-1",
    "bucket1": {
      "name": "codefleet-hris-storage",
      "url": "https://codefleet-hris-storage.s3-ap-southeast-1.amazonaws.com/files-dev/",
      "prefix": "files-dev"
    }
  },
  "ipCheck": false,
  "ip": {
    "allowed": [
      "::1"
    ]
  },
  "minPasswordLength": 8,
  "minSaltLength": 8,
  "attendance": {
    "types": [
      {
        "name": "Normal",
        "value": "normal"
      },
      {
        "name": "WFH",
        "value": "wfh"
      },
      {
        "name": "Travel",
        "value": "travel"
      },
      {
        "name": "Leave",
        "value": "leave"
      },
      {
        "name": "Pass Slip",
        "value": "pass"
      }
    ],
    "correctionReasons": [
      {
        "name": "Scanner is offline.",
        "value": "Scanner is offline."
      },
      {
        "name": "Scanner did not register my log.",
        "value": "Scanner did not register my log."
      },
      {
        "name": "I forgot to log.",
        "value": "I forgot to log."
      },
      {
        "name": "I don't have my ID.",
        "value": "I don't have my ID."
      },
      {
        "name": "Other reasons.",
        "value": "Other reasons."
      }
    ]
  },
  "workTime": {
    "workDays": 22,
    "hoursPerDay": 8,
    "travelPoints": 480,
    "gracePeriods": [
      {
        "mode": 1,
        "start": {
          "hour": 7,
          "minute": 0
        },
        "end": {
          "hour": 7,
          "minute": 15
        }
      },
      {
        "mode": 1,
        "start": {
          "hour": 13,
          "minute": 0
        },
        "end": {
          "hour": 13,
          "minute": 15
        }
      }
    ]
  },
  "scanners": {
    "scanningDeviceList": [
      {
        "value": "",
        "text": ""
      },
      {
        "value": "webcam",
        "text": "Device with Camera (eg. Phone, Tablet, Laptop)"
      },
      {
        "value": "qrCodeDevice",
        "text": "QR Code Scanner"
      },
      {
        "value": "rfid",
        "text": "RFID Card Scanner"
      }
    ]
  },
  "campuses": [
    {
      "value": "main",
      "text": "Salvador (Main)"
    },
    {
      "value": "mosqueda",
      "text": "Mosqueda"
    },
    {
      "value": "baterna",
      "text": "Baterna"
    }
  ]
}